# .env.example

# Database configuration
# Format: mysql://user:password@host:port/database_name
DATABASE_URL=mysql://root:password@localhost:3306/my_database_name

# Server configuration
# The host where the backend service will be running
HOST=localhost
# Port the service will listen to
PORT=8080

# Secret key for encryption (e.g., for JWT tokens or session keys)
# Replace with a strong random string for production
SECRET_KEY=your_secret_key_here

# Log configuration
# Set log level (options: debug, info, warn, error)
LOG_LEVEL=debug

# Optional configurations for mail service (e.g., using SMTP)
# Uncomment if using email functionality
# MAIL_SMTP_SERVER=smtp.mailtrap.io
# MAIL_SMTP_PORT=587
# MAIL_USERNAME=your_mailtrap_username
# MAIL_PASSWORD=your_mailtrap_password

# API Keys for external services
# Example for Stripe or SendGrid or any other service
# STRIPE_API_KEY=your_stripe_api_key
# SENDGRID_API_KEY=your_sendgrid_api_key
